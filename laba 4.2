#include <iostream>
#include <cmath>
using namespace std;

int main() {
	setlocale(0, "");

	double Alpha;
	do {

		cout << "Введите радианную меру угла (0 <= Alpha < 6.28) : " << endl;
		cin >> Alpha;

		if (Alpha >= 0 && Alpha < 6.28) {

			cout << "Угол " << Alpha << " радиан составляет " << (180 * Alpha) / 3.14 << " градусов." << endl;
			break;
		}
		else {

			cout << "Некорректные данные!" << endl;

		}
	} while (true);

	cout << endl;

	system("pause");

	return 0;

}
